#tweets
  %form{ "ng-submit" => "tc.addTweet()" }
    %input{ :type => "text", "ng-model" => "tc.content" }
    %button{ :type => "submit" }Tweet
  %a{ "ui-sref" => "users" }Who to follow * View all
  %ul
    %li{ "ng-repeat" => "tweet in tc.tweets" } |
      {{tweet.author}} |
      {{tweet.updated_at}} |
      {{tweet.content}} |
