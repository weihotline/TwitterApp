- action_url, redirect_url = urls_for(new_user)
- submit_btn_label, redirect_btn_label = labels_for(new_user)
.container
  .login-container
    = render :partial => "shared/error"
    .form-box
      = form_for(@user, url: action_url) do |f|
        = f.text_field :email, :placeholder => "Email"
        = f.password_field :password, :placeholder => "Password"
        = f.text_field :username, :placeholder => "Username" if new_user
        = f.submit submit_btn_label, :class => "btn btn-default"
      = button_to(redirect_btn_label, redirect_url, :method => :get,
        :class => "btn btn-primary")
